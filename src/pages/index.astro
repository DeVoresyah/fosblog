---
import Layout from '../layouts/Layout.astro';
import Footer from '@components/Footer.vue'
import ArticleCard from '@components/ArticleCard.vue';
import type { Frontmatter } from '@components/mdx.types';

const articles = await Astro.glob<Frontmatter>('./articles/*.mdx');
---

<Layout title="FOSBlog - Free open-source blog">
	<main>
		{articles.map((article, articleIdx) => <ArticleCard url={article.url} frontmatter={article.frontmatter} showThumbnail={articleIdx === 0} client:only="vue" />)}
	</main>

	<Footer />
</Layout>